---
layout: layouts/base.njk
templateClass: tmpl-notes
title: Notes
---

<div>
    Search by tag: <input id="searchInput" type="text" oninput="doSearch()">
</div>
{%- for note in collections.notesAlphabetical -%}
    <div class="datarow" data-values="{{note.data.tags}}">
        <details>
            <summary>
                <a class="note-link" href="{{note.url}}">{{ note.data.title }}</a>
                <span class="formatted-tag">{{ note.data.tags | noteTags}}</span>
            </summary>
            {# If needed check how to limit the size of the preview here #}
            {{ note.templateContent | safe }}
        </details>
    </div>
{%- endfor -%}

{% set inlineJS %}
      {% include "scripts/doSearch.js" %}
{% endset %}
<script>
    {{ inlineJS | safe }}
</script>
